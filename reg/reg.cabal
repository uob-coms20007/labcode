  hs-source-dirs:   src 

test-suite test

  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Test.hs
  other-modules:    TrSysTests
  build-depends:    base ^>=4.15.0.0, 
                    tasty ^>= 1.4, 
                    tasty-hunit ^>= 0.10.0.3, 
                    containers >= 0.6.4 && < 0.7,
